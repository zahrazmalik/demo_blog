<div class="box">
  <article class="media">
    <div class="media-content">
      <div class="content">
        <p>
          <strong><%= comment.name %>:</strong>
          <%= comment.comment %>
        </p>
      </div>
    </div>
     <%= link_to 'Delete', post_comment_path(comment.post, comment),
             method: :delete,
             class: "button is-danger",
             data: { confirm: 'Are you sure?' } %>

  </article>

</div>